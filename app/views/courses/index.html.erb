<div class="columns">
  <div class="column is-four-fifth is-flex is-flex-direction-column is-justify-content-center p-0">
    <h1 class="has-text-left mb-0 mt-0 pb-0"> Список курсов </h1>
  </div>

  <%= render(ButtonComponent.new(title: "Новый курс", color: "green", action: "/courses/new")) %>
</div>

<hr class="mt-3">

<div class="courses blocks">
  <% @courses.each do |course| %>
    <div class="block">
      <div class="columns">
        <div class="column is-four-fifths">
          <p class="columns">Объем <%= course.volume %></p>
          <a class="is-size-5 columns" href="<%= "/courses/#{course.id}/edit" %>"><%= course.title %></a>
        </div>
        <p class="column has-text-right is-size-5"><b><%= course.price %> $</b></p>
      </div>
    </div>
  <% end %>
</div>

<style>
    .column a {
        text-decoration: none;
    }
</style>
